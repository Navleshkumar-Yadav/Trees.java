import java.util.*;
class Node{
        int val;
        Node left;
        Node right;
        Node(int val){
                this.val = val;


              

        }
}
public class NodeOfTree {

        public static void main(String[] args) {
                Node a = new Node(1);
                Node b = new Node(4);
                Node c = new Node(3);
                Node d = new Node(2);
                Node e = new Node(6);
                Node f = new Node(7);
                a.left = b; a.right = c;
                b.left = d; b.right = e;
                c.right = f;
                b.val = 60;
                System.out.println(b.val);
                System.out.println(a.left.val);
                System.out.println(a.left.right.val);

                
        }
        
}
